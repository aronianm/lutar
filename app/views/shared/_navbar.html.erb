<nav class="flex flex-wrap items-center justify-between py-3 text-gray-700 bg-white container mx-auto px-4 <%= nav_classes %>" data-controller="nav">
  <div class="flex items-center mr-6 flex-no-shrink">
    <%= link_to root_path, class:"link text-xl tracking-tight font-black" do %>
      <%= image_tag 'lutar.png', class: 'w-24 rounded-xl' %>
    <% end %>
  </div>
  <div class="block lg:hidden">
    <%# Mobile nav toggle %>
    <button class="flex items-center p-2 -mr-1 rounded-lg focus:bg-gray-100" data-action="click->nav#toggleMenu touch->nav#toggleMenu">
      <svg class="stroke-current text-gray-500 w-7 h-7" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><title>Menu</title><g fill="none"><path d="M4 6h16M4 12h8m-8 6h16" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path></g></svg>
    </button>
  </div>
  <div class="items-center w-full text-center lg:flex-1 lg:flex lg:text-left pt-2 lg:pt-0 hidden" data-nav-target="menu">
    <div class="items-center block w-full mt-2 text-center lg:flex lg:flex-row lg:flex-1 lg:mt-0 lg:text-left lg:justify-end">
      <div class="" id="mobile-menu-2">
          <ul class="flex flex-col mt-4 font-medium lg:flex-row lg:space-x-8 lg:mt-0 menu menu-horizontal " data-turbolinks="false">
              <li>
                  <%= link_to root_path, data: {
                    action: 'click -> nav#click',
                    turbolinks: false
                  } do %>
                    <span>Home</span>
                  <% end %>
              </li>
              <% unless current_trainor %>
                <%= render :partial => 'shared/user_nav' %>
              <% else %>
                <%= render :partial => 'shared/trainor_nav' %>
              <% end %>
          </ul>
      </div>
      
      <% if user_signed_in? %>
          <%= button_to 'Sign Out',  destroy_user_session_path, method: :delete %>
      <% end %>
      <% if trainor_signed_in? %>
      <%= button_to 'Sign Out',  destroy_trainor_session_path, method: :delete %>
      <% end %>
    </div>
  </div>
</nav>
